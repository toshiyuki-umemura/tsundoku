<!-- サイドのヘッダー -->
<%= render "left_header" %>

<!-- 新規投稿 -->
<div class="new">
  <div class="new__container">
    <h1 class="new__container--header">投稿する</h1>
      <div class="new__container__contents">

      <!-- エラーメッセージ -->
      <%= render "layouts/post-title_error_message" %>
      <%= render "layouts/post-content_error_message" %>
      <%= render "layouts/post-tag_error_message" %>

        <%= form_for(@book) do |form| %>

          <div class="new__container__contents__field">
            <%= form.label :title, "タイトル" %>
            <%= form.text_field :title %>
          </div>

          <div class="new__container__contents__field--content">
            <%= form.label :content, "内容" %>
            <p><%= form.text_area :content %></p>
          </div>

            <%= form.fields_for :tags do |tag__form| %>
                <div class="new__container__contents__field">
                  <%= tag__form.label :tag, "タグ" %>
                    <%= tag__form.text_field :tag %>
              </div>
            <% end %>
          <div class="new__container__contents__submit">
          <%= form.submit "送信する", class:"new__container__contents__submit--button" %></div>
        <% end %>
      </div>

  </div>
</div>
