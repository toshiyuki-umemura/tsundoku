<%= render "books/left_header" %>

<div class="signup">
  <h2 class="signup__title">新規登録</h2>

    <div class="signup__contents">
      <p class="signup__contents--notes">※全て必須項目です</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="signup__contents__twitter">
            <%= link_to 'Twitterでログインa', user_twitter_omniauth_authorize_path, class: "signup__contents__twitter--button" %>
          </div>

          <div class="signup__contents__field">
            <%= f.label :name, "名前", {class: 'signup__contents__field--label'} %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>

          <div class="signup__contents__field">
            <%= f.label :nickname, "ニックネーム", {class: 'signup__contents__field--label'} %>
            <em>(8文字まで)</em><br />
            <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
          </div>

          <div class="signup__contents__field">
            <%= f.label :email, "メールアドレス", {class: 'signup__contents__field--label'} %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="signup__contents__field">
            <%= f.label :password, "パスワード", {class: 'signup__contents__field--label'} %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="signup__contents__field">
            <%= f.label :password_confirmation, "パスワード確認", {class: 'signup__contents__field--label'} %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="signup__contents__field__actions">
            <%= f.submit "新規登録する" %>
          </div>
        <% end %>
    </div>
    
  </div>
</div>