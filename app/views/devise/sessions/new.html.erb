<%= render "books/left_header" %>

<div class="signin">
  <h2 class="signin__title">ログイン</h2>

    <div class="signin__contents">


      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
        <%- end -%>

        <%# <div class="signin__contents__twitter">
          <%= link_to 'Twitterでログイン', user_twitter_omniauth_authorize_path, class: "signin__contents__twitter--button" %>
        <%# </div> %>

        <div class="signin__contents__field">
          <%= f.label :email, "メールアドレス", {class: 'signin__contents__field--label'} %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="signin__contents__field">
          <%= f.label :password, "パスワード", {class: 'signin__contents__field--label'} %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="signin__contents__field__actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
    </div>

  </div>
</div>